<td class="icons" style="text-align: right">
    <div style="position:relative;">
        {% include "NetworkingInitCmsBundle:CRUD:list__action_edit.html.twig" %}
        <a class="btn btn-small actions-toggle"
                data-original-title="{{ 'link.show_more_actions'|trans({}, 'NetworkingInitCmsAdmin') }}"
                data-toggle="row-actions">
            <i class="icon-caret-down"></i>
        </a>
        <div class="row-actions">
            {% for key, actions in field_description.options.actions %}
                {% include actions.template %}
            {% endfor %}
            <a class="btn btn-small actions-toggle-close "
                    data-original-title="{{ 'link.hide_actions'|trans({}, 'NetworkingInitCmsAdmin') }}"
                    data-toggle="row-actions">
                <i class="icon-caret-left caret-button-padding"></i>
            </a>
        </div>
    </div>
</td>