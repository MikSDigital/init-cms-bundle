{% extends 'NetworkingInitCmsBundle:CRUD:base_list.html.twig' %}

{% block actions %}
    <div class="accordion-group">
        <div class="accordion-heading">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseTwo">
                <div class="accordion-caret"><b class="caret"></b></div>
                {{ 'legend.actions'|trans({}, admin.translationDomain) }}
            </a>
        </div>
        <div id="collapseTwo" class="accordion-body collapse in">
            <div class="accordion-inner">
                {% include 'NetworkingInitCmsBundle:Core:create_button.html.twig' %}
                <br/><br/>
            </div>
        </div>
    </div>
{% endblock %}
{% block list_table %}
    {{ parent() }}
    <script>
               $(document).ready(function () {

                   var ua = navigator.userAgent,
                           event = (ua.match(/iPad/i)) ? "touchstart" : "click";


                   $(".actions-toggle").bind(event, function () {
                       $('.row-actions').hide();
                       $(this).parent().children('.row-actions').fadeToggle('fast');
                       //$(this).parent().children('.row-actions').css('display', 'inline-block');
                   });
                   $(".actions-toggle-close").bind(event, function () {
                       $(this).parent().fadeToggle('fast');
                   });

                   $('.show-tooltip').tooltip({placement:'bottom', delay:{ show:800, hide:100 }});
               });
           </script>
{% endblock %}
