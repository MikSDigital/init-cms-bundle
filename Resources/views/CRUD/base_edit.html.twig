{% extends base_template %}

{% block title %}
    {% if admin.id(object) %}
        {{ "title_edit"|trans({'%name%': admin.toString(object),'%admin_label%': admin.getClassnameLabel() }, 'NetworkingInitCmsAdmin') }}
    {% else %}
        {{ "title_create"|trans({'%admin_label%': admin.getClassnameLabel()}, 'NetworkingInitCmsAdmin') }}
    {% endif %}
{% endblock %}

{% block actions %}
    <div class="sonata-actions">
        {% if admin.hasroute('show') and admin.id(object) and admin.isGranted('VIEW', object) and admin.show|length > 0 %}
            <a class="btn sonata-action-element"
               href="{{ admin.generateObjectUrl('show', object) }}">{{ 'link_action_show'|trans({}, 'NetworkingInitCmsAdmin') }}</a>
        {% endif %}
        {% if admin.hasroute('history') and admin.id(object) and admin.isGranted('EDIT', object) %}
            <a class="btn sonata-action-element"
               href="{{ admin.generateObjectUrl('history', object) }}">{{ 'link_action_history'|trans({}, 'NetworkingInitCmsAdmin') }}</a>
        {% endif %}
        {% include 'NetworkingInitCmsBundle:Core:create_button.html.twig' %}
        {% if admin.hasroute('list') and admin.isGranted('LIST') %}
            <a class="btn sonata-action-element"
               href="{{ admin.generateUrl('list') }}">{{ 'link_action_list'|trans({}, 'NetworkingInitCmsAdmin') }}</a>
        {% endif %}
    </div>
{% endblock %}

{% block side_menu %}{{ knp_menu_render(admin.sidemenu(action), {'currentClass' : 'active'}, 'list') }}{% endblock %}
{% set _side_menu = block('side_menu') %}
{% use 'NetworkingInitCmsBundle:CRUD:base_edit_form.html.twig' with form as parentForm %}

{% block form %}
    {% if app.request.isxmlhttprequest %}
        {{ block('parentForm') }}
    {% else %}
        <div class="span{% if _side_menu is empty %}10{% else %}8{% endif %}">
            {{ block('parentForm') }}
        </div>
    {% endif %}
{% endblock %}
