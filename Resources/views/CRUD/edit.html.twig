{% extends 'NetworkingInitCmsBundle:CRUD:base_edit.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/a2lixtranslationform/css/a2lix_translation.css') }}" type="text/css"
          media="all"/>
    {% if init_cms_editor == 'redactor' %}
        <link rel="stylesheet" href="{{ asset('bundles/networkinginitcms/js/redactor/redactor.css') }}" type="text/css"
              media="all"/>
    {% endif %}
    <link rel="stylesheet" href="{{ asset('bundles/networkinginitcms/css/select2.css') }}" type="text/css"
          media="all"/>
{% endblock stylesheets %}

{% block before_body_end %}
{% if init_cms_editor == 'ckeditor' %}
<script type="text/javascript" src="{{ asset('/bundles/ivoryckeditor/ckeditor.js') }}"></script>
{% elseif init_cms_editor == 'redactor' %}
    <script src="{{ asset('/bundles/networkinginitcms/js/redactor/redactor.js') }}"></script>
    <script src="{{ asset('/bundles/networkinginitcms/js/redactor/redactor_extensions.js') }}"></script>
{% endif %}
{% include 'NetworkingInitCmsBundle:CRUD:edit_script.html.twig' %}
{{ parent() }}
{% endblock %}


