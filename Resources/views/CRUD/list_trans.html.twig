{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% block field%}
    {% if field_description.options.catalogue is not defined %}
        <span class="show-tooltip" data-original-title="{{value|trans}}">{{value|trans}}</span>
    {% else %}
        <span class="show-tooltip" data-original-title="{{value|trans({}, field_description.options.catalogue)}}">{{value|trans({}, field_description.options.catalogue)}}</span>
    {% endif %}
{% endblock %}