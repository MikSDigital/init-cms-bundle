{% set pageAdmin = admin.getConfigurationPool.getAdminByAdminCode('networking_init_cms.admin.page') %}
<div class="menu_item {% if last_edited == node.id %}info{% endif %}">
    <div style="margin-right: 10px;  width: 100%">{{ node.name }}
        <div class="stop" style="line-height: 3px; margin-left: 25px; width: 500px;">
                <ul style="display: none;">
                    <li class="table-row-style list_item placeholder" style="padding: 10px;">
                            <a class="colored-link  menu_place_holder" href="javascript:;"
                               onclick="saveSibling('{{ admin.generateUrl('newPlacement', {'newMenuItemId': last_edited, 'menuItemId': node.id, 'sibling':false }) }}')">
                                + {{ 'menu_item.add_here'|trans({}, admin.translationDomain) }}</a>
                    </li>
                </ul>
            </div>
    </div>
    <div style="clear: both"></div>
</div>
