{% block title %}
    {{ help_text.title }}
{% endblock %}

{% block language_indicator %}
{% endblock %}

{% block sonata_top_bar_nav %}
<ul>

    {% for element in help_nav %}
        {% if element.group_items|length > 0 %}
            <h4>{{ element.group_name }}</h4>
            <ul>
                {% for row in element.group_items %}
                    {% if adminCode == row.adminCode and action == row.action %}
                        {% set strongTag = '<strong>' %}
                        {% set strongEndTag = '</strong>' %}
                    {% else %}
                        {% set strongTag = '' %}
                        {% set strongEndTag = '' %}
                    {% endif %}

                    <li>{{ strongTag | raw }}<a
                            href="{{ url('networking_init_cms_help', {'adminCode':row.adminCode,'action':row.action}) }}">{{ row.title }}</a>{{ strongEndTag | raw }}
                    </li>




                {% endfor %}
            </ul>
        {% endif %}
    {% endfor %}


    {% endblock %}

    {% block help_text %}
        {{ help_text.text | raw }}
    {% endblock %}
