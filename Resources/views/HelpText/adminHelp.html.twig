{% extends "NetworkingInitCmsBundle::admin_layout.html.twig" %}


{% block init_cms_top_nav %}
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <div class="row">
                    <div class="span10">
                        {% if admin_pool is defined %}
                            <a href="{{ url('sonata_admin_dashboard') }}" class="brand">
                                {#<img src="{{ asset(admin_pool.titlelogo) }}"  alt="{{ admin_pool.title }}" />#}
                                <span class="info-very-soft">initcms - </span>{{ admin_pool.title }}
                            </a>
                        {% endif %}
                    </div>
                    <div class="span2 "><p class="pull-right">close button</p></div>

                </div>

                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}
    {{ help_text.title }}
{% endblock%}

{% block language_indicator %}
{% endblock %}

{% block sonata_top_bar_nav %}
    <ul>

    {% for element in help_nav %}
        <h2>{{ element.group_name }}</h2>
            <ul>
            {% for row in element.group_items %}
                {% if adminCode == row.adminCode and action == row.action %}
                    {% set strongTag = '<strong>' %}
                    {% set strongEndTag = '</strong>' %}
                {% else %}
                    {% set strongTag = '' %}
                    {% set strongEndTag = '' %}
                {% endif %}

                <li>{{ strongTag | raw }}<a href="{{ url('networking_init_cms_help', {'adminCode':row.adminCode,'action':row.action}) }}" >{{ row.title }}</a>{{ strongEndTag | raw }}</li>




            {% endfor %}
            </ul>
    {% endfor %}


{% endblock %}

{% block help_text %}
    {{ help_text.text | raw }}
{% endblock%}
