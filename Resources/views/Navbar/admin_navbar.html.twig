<div class="navbar navbar-fixed-top navbar-initcms navbar-inverse">
    <div class="navbar-inner">
        <div class="container{% if app.user and app.user.getAdminSetting('admin_portal_width') != 'small' %}-fluid{% endif %}">
            <div class="pull-left">
                <a href="{{ url('sonata_admin_dashboard') }}" class="pull-left">
                    <img id="initcms-logo" src="{{ asset('bundles/networkinginitcms/img/logo_initcms.png') }}"
                         width="77">
                </a>
                {% if admin_pool is defined %}
                    <a href="{{ url('sonata_admin_dashboard') }}" class="brand">
                        {{ admin_pool.title }}
                    </a>
                {% endif %}
            </div>
            <div class="pull-right">
                {% if app.user %}
                    <button type="button" class="btn btn-default navbar-btn pull-right hidden-phone hidden-tablet" id="toggleWidth">
                        <i class="icon icon-{% if app.user and app.user.getAdminSetting('admin_portal_width') == 'small' %}resize-full{% else %}resize-small{% endif %}"></i>
                    </button>
                {% endif %}
                <button class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span class="hidden-phone">
                {% if admin_pool is defined %}
                    {% include admin_pool.getTemplate('user_block') %}
                {% endif %}
                {% if admin_pool is defined %}
                    {{ knp_menu_render('AdminMenu',
                    {'currentClass': 'active',
                    'ancestorClass': 'active',
                    'allow_safe_labels': true
                    }) }}
                {% endif %}
                    </span>
            </div>
        </div>
    </div>
</div>