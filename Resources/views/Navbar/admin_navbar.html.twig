{% block admin_style %}
    {% if app.user is defined %}
        {% if is_granted('ROLE_SONATA_ADMIN') %}
            {# Override this block to add your own files! #}
            {% stylesheets filter='less,?yui_css'
            '@NetworkingInitCmsBundle/Resources/public/less/admin-navbar.less' %}
            <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen"/>
            {% endstylesheets %}
        {% endif %}
    {% endif %}
{% endblock admin_style %}


{% block admin_navbar %}
    {% if app.user is defined %}
        {% if is_granted('ROLE_SONATA_ADMIN') %}
            <div class="navbar navbar-fixed-top navbar-initcms navbar-inverse">
                <div class="navbar-inner">
                    <div class="container">
                        <div class="row">
                            <div class="span2" class="brand">
                                <a href="{{ url('sonata_admin_dashboard') }}" class="brand">
                                    <span class="info-very-soft">initcms</span>
                                </a>
                            </div>
                            <div class="span5">
                                {% if admin_pool is defined %}
                                    <a href="{{ url('sonata_admin_dashboard') }}" class="brand">
                                        {#<img src="{{ asset(admin_pool.titlelogo) }}"  alt="{{ admin_pool.title }}" />#}
                                        {{ admin_pool.title }}
                                    </a>
                                    {% include admin_pool.getTemplate('user_block') %}
                                {% endif %}
                            </div>
                            <div class="span5">
                                {{ mopa_bootstrap_navbar('viewStatusMenuBlock') }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    {% endif %}
{% endblock %}