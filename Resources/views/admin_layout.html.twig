{% set _preview      = block('preview') %}
{% set _form         = block('form') %}
{% set _show         = block('show') %}
{% set _list_table   = block('list_table') %}
{% set _list_filters = block('list_filters') %}
{% set _side_menu    = block('side_menu') %}
{% set _content      = block('content') %}
{% set _title        = block('title') %}
{% set _breadcrumb   = block('breadcrumb') %}
{% set _help_text    = block('help_text') %}
{% set isActive      = false %}
{% if admin is defined %}
    {% set currentAdmin = admin %}
{% endif %}
<!DOCTYPE html>
<html class="no-js">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {% block stylesheets %}
        <!-- jQuery code -->
        <link rel="stylesheet" href="{{ asset('bundles/sonatajquery/themes/flick/jquery-ui-1.8.16.custom.css') }}"
              type="text/css" media="all"/>

        {% stylesheets filter='less,cssembed,yui_css'
        '@NetworkingInitCmsBundle/Resources/public/css/select2.css'
        '@NetworkingInitCmsBundle/Resources/public/less/admin.less'
        output='css/admin.css' %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen"/>
        {% endstylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/networkinginitcms/css/bootstrap-responsive.min.css') }}"
              type="text/css" media="all"/>
    {% endblock %}

    {% block javascripts %}

        <script src="{{ asset('bundles/sonatajquery/jquery-1.8.0.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/sonatajquery/jquery-ui-1.8.23.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/sonatajquery/jquery-ui-i18n.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/networkinginitcms/js/bootstrap.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/sonataadmin/qtip/jquery.qtip-1.0.0-rc3.min.js') }}"
                type="text/javascript"></script>
        <script src="{{ asset('bundles/sonataadmin/jquery/jquery.form.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/sonataadmin/base.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/networkinginitcms/js/respond.min.js') }}"></script>
        <script src="{{ asset('bundles/networkinginitcms/js/select2.min.js') }}"></script>
    {% endblock %}

    <title>
        {{ 'Admin'|trans({}, 'SonataAdminBundle') }}

        {% if _title is not empty %}
        {{ _title|raw|striptags }}
        {% else %}
        {% if action is defined %}
        -
        {% for label, uri in admin.breadcrumbs(action) %}
        {% if not loop.first %}
        &gt;
        {% endif %}
        {{ label|replace({'%span%': '<span class="info-soft">', '%span/%': "</span>"})|raw|striptags }}
        {% endfor %}
        {% endif %}
        {% endif %}
    </title>
</head>
<body class="initcms">
{# initialize block value #}

{% block init_cms_top_nav %}

    <div class="navbar navbar-fixed-top navbar-initcms navbar-inverse">
        <div class="navbar-inner">
            <div class="container">
                <div class="row">
                    <div class="span2">
                        <a href="{{ url('sonata_admin_dashboard') }}" class="pull-left">
                            <img src="{{ asset('bundles/networkinginitcms/img/logo_initcms.png') }}" width="77">
                        </a>
                    </div>
                    <div class="span6">
                        {% if admin_pool is defined %}
                            <a href="{{ url('sonata_admin_dashboard') }}" class="brand">
                                {#<img src="{{ asset(admin_pool.titlelogo) }}"  alt="{{ admin_pool.title }}" />#}
                                {{ admin_pool.title }}
                            </a>
                            {% include admin_pool.getTemplate('user_block') %}
                        {% endif %}
                    </div>
                    <div class="span4">
                        {% if admin_pool is defined %}
                            {{ mopa_bootstrap_navbar('viewStatusMenuBlock') }}
                            {#{{ mopa_bootstrap_navbar('adminLangNavbar') }}#}
                        {% endif %}
                    </div>
                </div>

                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
            </div>
        </div>
    </div>
{% endblock %}

<!-- Subhead
================================================== -->
{% block navbar_spacer %}
<div style="height:41px;"></div>
{% endblock %}
<div class="{% block container_class %}container{% endblock %}">
    {#{% if _breadcrumb is not empty or action is defined %}#}
    {#<ul class="breadcrumb">#}
    {#{% if _breadcrumb is empty %}#}
    {#{% if action is defined %}#}
    {#{% for label, uri in admin.breadcrumbs(action) %}#}
    {#{% if not loop.last %}#}
    {#<li><a href="{{ uri }}">{{ label }}</a><span class="divider">/</span></li>#}
    {#{% else %}#}
    {#<li class="active">{{ label }}</li>#}
    {#{% endif %}#}
    {#{% endfor %}#}
    {#{% endif %}#}
    {#{% else %}#}
    {#{{ _breadcrumb|raw }}#}
    {#{% endif %}#}
    {#</ul>#}
    {#{% endif %}#}

    <div class="row">
        {% block sidebar_left %}
            <div class="span2">
                <div class="nav-main">
                    {% block top_bar_before_nav %} {% endblock %}

                    {% block sonata_top_bar_nav %}
                        {% include 'NetworkingInitCmsBundle:Navbar:admin_side_nav.html.twig' %}
                    {% endblock %}
                    {% block top_bar_after_nav %} {% endblock %}

                </div>
            </div>
        {% endblock %}
        <div class="{% if block('sidebar_left') %}span10{% else %}span12{% endif %} content-main">
            <div class="notice-block affix span10 " data-spy="affix-top" data-offset-top="10"
                 style="top: 44px; margin-left: 0;">
                {% block notice %}
                    {% for notice_level in ['success','error','info', 'warning'] %}
                        {% set session_var = 'sonata_flash_' ~ notice_level %}
                        {% for flash in app.session.flashbag.get(session_var) %}
                            <div class="alert {{ 'alert-' ~ notice_level }}">
                                <a class="close" data-dismiss="alert" href="#">Ã—</a>
                                {{ flash|trans([], 'SonataAdminBundle') }}
                            </div>
                        {% endfor %}
                    {% endfor %}

                {% endblock %}
            </div>
            <div class="row content-top">
                <div class="span4">
                    <!--<a href="?c=menus"> show all Menus</a>-->
                </div>
            </div>
            {% block page_title %}
            <div class="row content-head">
                <div class="span7 page_title">

                    {% if _title is not empty or action is defined %}
                    <h1>
                        {% if _title is not empty %}
                        {{ _title|raw }}
                        {% elseif action is defined %}
                            {% for label, uri in admin.breadcrumbs(action) %}
                                {% if loop.last %}
                                    {{ label|replace({'%span%': '<span class="info-soft">', '%span/%': "</span>"})|raw }}
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                        {% if action is defined and action == 'edit' %}
                            {% set settings = {} %}
                            {% if object.locale is defined %}
                                {% set settings = {'locale': object.locale} %}
                            {% endif %}

                            <a class="link-underlined font-small font-light"
                               href="{{ admin.generateUrl('list', settings) }}">{{ 'link.go_to_list'|trans({'%admin_label%':admin.label}, 'NetworkingInitCmsAdmin') }}</a>
                        {% endif %}
                    </h1>

                    {% endif %}
                </div>

                <div class="span3 context-head">
                    {% block top_actions %}{% endblock %}
                    {#{% if admin is defined %}#}
                    {#{% block language_indicator %}#}
                    {#<div class="language-indicator">#}
                    {#{{ networking_init_cms_get_current_admin_locale(admin)|slice(0,2)|upper }}</div>#}
                    {#{% endblock %}#}
                    {#{% endif %}#}
                    {% if app.security.token and is_granted('ROLE_SONATA_ADMIN') %}
                    {% if _help_text is empty %}
                        {% if admin is not defined %}
                            {% set adminCode = 'dashboard' %}
                            {% set actionHelp = '' %}
                        {% else %}
                            {% set adminCode = admin.code %}
                            {% set actionHelp = action %}
                        {% endif %}
                        <div class="level-headline-icon pull-right"><a
                                href="{{ url('networking_init_cms_help', {'adminCode':adminCode,'action':actionHelp}) }}"
                                target="_blank">
                            <div class="info_button_medium"></div>
                        </a></div>
                    {% endif %}
                    {% endif %}
                </div>
            </div>
            {% endblock %}



            {% block sonata_admin_content %}
            <div class="row row-content-wide">
                {% if _preview is not empty %}
                    <div class="sonata-ba-preview span{% if _side_menu is empty %}10{% else %}8{% endif %}">{{ _preview|raw }}</div>
                {% endif %}

                {% if _content is not empty %}
                <div class="sonata-ba-content span{% if block('sidebar_left') is empty %}12{% elseif _side_menu is empty %}10{% else %}8{% endif %}">{{ _content|raw }}</div>
                {% endif %}

                {% if _help_text is not empty %}
                    <div class="sonata-ba-content span{% if _side_menu is empty %}10{% else %}8{% endif %}">{{ _help_text|raw }}</div>
                {% endif %}

                {% if _show is not empty %}
                    <div class="sonata-ba-show span{% if _side_menu is empty %}10{% else %}8{% endif %}">{{ _show|raw }}</div>
                {% endif %}

                {% if _form is not empty %}
                    <div>{{ _form|raw }}</div>
                {% endif %}




                {% if _list_table is not empty or _list_filters is not empty %}

                    <div class="span{% if _side_menu is not empty %}8{% else %}10{% endif %}">
                        {{ _list_filters|raw }}
                        {% block actions %}{% endblock %}
                        {{ _list_table|raw }}
                    </div>

                {% endif %}

                {% if _side_menu is not empty %}
                    <div class="sidebar span2">
                        <div class="well sonata-ba-side-menu" style="padding: 8px 0;">{{ _side_menu|raw }}</div>
                    </div>
                {% endif %}
            </div>
            {% endblock %}
        </div>


    </div>

    {% block footer %}
        {#{{ tinymce_init() }}#}
        {#{{ tinymce_init_live() }}#}
    {% endblock %}
</div>
{% if app.user is defined %}
    {% if is_granted('ROLE_SONATA_ADMIN') %}
        <script src="{{ path('networking_init_cms_js') }}"></script>
    {% endif %}
{% endif %}
{% block before_body_end %}{% endblock %}
{% jsblock 'render' %}
</body>
</html>
