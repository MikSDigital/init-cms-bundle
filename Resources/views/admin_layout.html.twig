{% set _preview      = block('preview') %}
{% set _form         = block('form') %}
{% set _show         = block('show') %}
{% set _list_table   = block('list_table') %}
{% set _list_filters = block('list_filters') %}
{% set _side_menu    = block('side_menu') %}
{% set _content      = block('content') %}
{% set _title        = block('title') %}
{% set _breadcrumb   = block('breadcrumb') %}
{% set isActive      = false %}
{% if admin is defined %}
    {% set currentAdmin = admin %}
{% endif %}
<!DOCTYPE html>
<html class="no-js">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {% block stylesheets %}
        <!-- jQuery code -->
        <link rel="stylesheet" href="{{ asset('bundles/sonatajquery/themes/flick/jquery-ui-1.8.16.custom.css') }}"
              type="text/css" media="all"/>

        {#<link rel="stylesheet" href="{{ asset('bundles/networkinginitcms/css/bootstrap.min.css') }}" type="text/css"#}
              {#media="all"/>#}


        <!-- base application asset -->
        {#<link rel="stylesheet" href="{{ asset('bundles/sonataadmin/css/layout.css') }}" type="text/css" media="all"/>#}
        {#<link rel="stylesheet" href="{{ asset('bundles/sonataadmin/css/colors.css') }}" type="text/css" media="all"/>#}
        <link rel="stylesheet" href="{{ asset('bundles/networkinginitcms/css/admin.css') }}" type="text/css"
              media="all"/>
        <link rel="stylesheet" href="{{ asset('bundles/networkinginitcms/css/theme-a.css') }}" type="text/css"
              media="all"/>
        <link rel="stylesheet" href="{{ asset('bundles/networkinginitcms/css/bootstrap-responsive.min.css') }}"
              type="text/css" media="all"/>
    {% endblock %}

    {% block javascripts %}
        <script src="{{ asset('bundles/sonatajquery/jquery-1.8.0.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/sonatajquery/jquery-ui-1.8.23.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/sonatajquery/jquery-ui-i18n.js') }}" type="text/javascript"></script>

        <script src="{{ asset('bundles/sonataadmin/bootstrap/js/bootstrap.min.js') }}" type="text/javascript"></script>

        <script src="{{ asset('bundles/sonataadmin/qtip/jquery.qtip-1.0.0-rc3.min.js') }}"
                type="text/javascript"></script>
        <script src="{{ asset('bundles/sonataadmin/jquery/jquery.form.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/sonataadmin/base.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/networkinginitcms/js/respond.min.js') }}"></script>
    {% endblock %}

    <title>
        {{ 'Admin'|trans({}, 'SonataAdminBundle') }}

        {% if _title is not empty %}
            {{ _title|raw }}
        {% else %}
            {% if action is defined %}
                -
                {% for label, uri in admin.breadcrumbs(action) %}
                    {% if not loop.first %}
                        &gt;
                    {% endif %}
                    {{ label }}
                {% endfor %}
            {% endif %}
        {% endif %}
    </title>
</head>
<body class="initcms">
{# initialize block value #}

<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <div class="row">
                <div class="span5">
                    {% if admin_pool is defined %}
                        <a href="{{ url('sonata_admin_dashboard') }}" class="brand">
                            {#<img src="{{ asset(admin_pool.titlelogo) }}"  alt="{{ admin_pool.title }}" />#}
                            <span class="info-very-soft">initcms - </span>{{ admin_pool.title }}
                        </a>
                    {% endif %}
                </div>
                <div class="span2 align-center">
                    {% if app.user %}
                        <ul class="nav">
                            <li class="dropdown">
                                <a id="drop1" href="#" role="button" class="dropdown-toggle" data-toggle="dropdown"><span class="font-smaller color-second">{{ app.user }}</span> <b class="caret"></b></a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="drop1">
                                    <li><a tabindex="-1" href="http://google.com">Account Settings</a></li>
                                    {% if is_granted('ROLE_PREVIOUS_ADMIN') and sonata_user.impersonating %}
                                    <li><a href="{{ url(sonata_user.impersonating.route, sonata_user.impersonating.parameters| merge({'_switch_user': '_exit'})) }}">(exit)</a></li>
                                    {% endif %}
                                    <li><a href="{{ url('sonata_user_admin_security_logout') }}">{{ 'user_block_logout'|trans({}, 'SonataUserBundle') }}</a></li>
                                </ul>
                            </li>
                        </ul>
                       {% endif %}
                </div>
                <div class="span5">
                    {% if admin_pool is defined %}
                        {{ mopa_bootstrap_navbar('viewStatusMenuBlock') }}
                        {#{{ mopa_bootstrap_navbar('adminLangNavbar') }}#}
                    {% endif %}
                </div>
            </div>

            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            {% if admin_pool is defined %}

            {% endif %}
        </div>
    </div>
</div>
<!-- Subhead
================================================== -->
<div style="height:41px;"></div>
<div class="container">
{#{% if _breadcrumb is not empty or action is defined %}#}
{#<ul class="breadcrumb">#}
{#{% if _breadcrumb is empty %}#}
{#{% if action is defined %}#}
{#{% for label, uri in admin.breadcrumbs(action) %}#}
{#{% if not loop.last %}#}
{#<li><a href="{{ uri }}">{{ label }}</a><span class="divider">/</span></li>#}
{#{% else %}#}
{#<li class="active">{{ label }}</li>#}
{#{% endif %}#}
{#{% endfor %}#}
{#{% endif %}#}
{#{% else %}#}
{#{{ _breadcrumb|raw }}#}
{#{% endif %}#}
{#</ul>#}
{#{% endif %}#}
<div class="notice-block">
    {% block notice %}

        {% for notice_level in ['success','error','info', 'warning'] %}
            {% set session_var = 'sonata_flash_' ~ notice_level %}
            {% for flash in app.session.flashbag.get(session_var) %}
                <div class="alert {{ 'alert-' ~ notice_level }}">
                    <a class="close" data-dismiss="alert" href="#">Ã—</a>
                    {{ flash|trans([], 'SonataAdminBundle') }}
                </div>
            {% endfor %}
        {% endfor %}

    {% endblock %}
</div>
<div class="row">
    <div class="span2">
        <div class="nav-main">
            <div style="min-height:30px;background:#fff;"></div>

            {% block top_bar_before_nav %} {% endblock %}

            {% block sonata_top_bar_nav %}
            {% if app.security.token and is_granted('ROLE_SONATA_ADMIN') %}
            {# Start admin menu #}
            {% for group in admin_pool.dashboardgroups %}
            {% if loop.first %}
            <div class="nav-custom"
                 style="background:url('{{ asset('bundles/networkinginitcms/img/nav_left_top_bg.png') }}') no-repeat;">
                {% set small = false %}
                {% else %}
                <div class="nav-custom nav-custom-small" style="margin-top: 50px;">
                    {% set small = true %}
                    {% endif %}
                    <ul>
                        {% if loop.first %}
                        <li class="first-level {% if admin is not defined %}active{% endif %}"
                            style="margin-bottom: 0px;">
                            <a href="{{ url('sonata_admin_dashboard') }}">

                                {% if admin is not defined %}
                                <div class="pull-right" style="position:relative;">
                                    <div class="active-corner-top"></div>
                                </div>
                                {% endif %}
                                <div class="pull-left"><img
                                        src="{{ asset('bundles/networkinginitcms/img/icons/icon_dashboard_small') }}{% if admin is not defined %}_active{% endif %}.png"/>
                                </div>
                                <div class="pull-left first-level-text">{{ 'admin.menu.dashboard'|trans({}, 'PageAdmin') }}</div>
                                <div class="clearfix"></div>
                                {% if admin is not defined %}
                                <div class="pull-right" style="position:relative;">
                                    <div class="active-corner-bottom"></div>
                                </div>
                                {% endif %}

                            </a>
                        </li>
                        {% endif %}
                        {% for admin in group.items %}
                            {% if currentAdmin is defined %}
                                {% if admin.code in currentAdmin.getChildren|keys or admin.code == currentAdmin.code %}
                                    {% set isActive = true %}
                                {% else %}
                                    {% set isActive = false %}
                                {% endif %}
                            {% endif %}
                            {% if admin.hasroute('create') and admin.isGranted('CREATE') or admin.hasroute('list') and admin.isGranted('LIST') %}
                                <li class="first-level {% if isActive %}active{% endif %}{% if small %}first-level-small{% endif %} ">
                                    <div class="pull-left">
                                        <img src="
                                    {% if isActive %}
                                        {{ asset(networking_init_cms_get_admin_icon(admin, 'small', 'active')) }}
                                    {% else %}
                                        {{ asset(networking_init_cms_get_admin_icon(admin, 'small')) }}
                                    {% endif %}"/></div>
                                    <a href="{{ admin.generateUrl('list') }}">
                                        <div class="pull-left {% if small %}second{% else %}first{% endif %}-level-text">{{ admin.label|trans({}, admin.translationdomain) }}</div>
                                    </a>
                                    {% if isActive %}
                                        <div class="pull-right" style="position:relative;">
                                            <div class="active-corner-top"></div>
                                        </div>
                                    {% endif %}
                                    <div class="clearfix"></div>
                                    {% if admin.hasChildren %}
                                        <ul class="ul-second-level">
                                            {% for subadmin in admin.getChildren %}
                                                <li class="second-level">
                                                    <a href="{{ subadmin.generateUrl('list') }}">{{ subadmin.label|trans({}, subadmin.translationdomain) }}</a>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    {% endif %}

                                    {% if isActive %}
                                        <div class="pull-right" style="position:relative;">
                                            <div class="active-corner-bottom"></div>
                                        </div>
                                    {% endif %}
                                </li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </div>
                {% endfor %}

                {# End admin menu #}
                {% endif %}
                {% endblock %}
                {% block top_bar_after_nav %} {% endblock %}

            </div>
        </div>
        <div class="span10 content-main">
            <div class="row content-top">
                <div class="span4">
                    <!--<a href="?c=menus"> show all Menus</a>-->
                </div>
            </div>
            <div class="row content-head">
                <div class="span5 page_title">
                    {% if _title is not empty or action is defined %}
                    <h1>
                        {% if _title is not empty %}
                        {{ _title|raw }}
                        {% elseif action is defined %}
                            {% for label, uri in admin.breadcrumbs(action) %}
                                {% if loop.last %}
                                    {{ label }}
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                    </h1>
                    {% endif %}
                </div>
                <div class="span2 context-head">
                    &nbsp;
                </div>
                <div class="span3 context-head">
                    {% block top_actions %}{% endblock %}
                    {% if admin is defined %}
                        {% block language_indicator %}
                            <div class="language-indicator">{{ networking_init_cms_get_current_admin_locale(admin) }}</div>
                        {% endblock %}
                    {% endif %}
                    <div class="icon-medium-inline level-headline-icon"><a href="#" target="_blank">
                        <div class="info_button_medium"></div>
                    </a></div>
                </div>
            </div>



            {% block sonata_admin_content %}

                {% if _preview is not empty %}
                    <div class="sonata-ba-preview">{{ _preview|raw }}</div>
                {% endif %}

                {% if _content is not empty %}
                    <div class="sonata-ba-content">{{ _content|raw }}</div>
                {% endif %}

                {% if _show is not empty %}
                    <div class="sonata-ba-show">{{ _show|raw }}</div>
                {% endif %}

                {% if _form is not empty %}
                    <div class="row row-content-wide">{{ _form|raw }}</div>
                {% endif %}

                {% if _list_table is not empty or _list_filters is not empty %}
                    <div class="row">
                        <div class="span7">
                            {{ _list_table|raw }}
                        </div>
                        <div class="span3">
                            <div class="accordion" id="accordion1">
                                {{ _list_filters|raw }}
                                {% block actions %}{% endblock %}
                            </div>
                        </div>
                    </div>
                {% endif %}

            {% endblock %}
        </div>
        {% if _side_menu is not empty %}
            <div class="sidebar span2">
                <div class="well sonata-ba-side-menu" style="padding: 8px 0;">{{ _side_menu|raw }}</div>
            </div>
        {% endif %}


    </div>

    {% block footer %}
        {#{{ tinymce_init() }}#}
        {#{{ tinymce_init_live() }}#}
        {% jsblock 'render' %}

    {% endblock %}
</div>
</body>
</html>
