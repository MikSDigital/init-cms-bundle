<?xml version="1.0" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
        http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="Networking\InitCmsBundle\Model\Page">
        <constraint name="Networking\InitCmsBundle\Validator\Constraints\UniqueURL">
            <option name="groups">
                <value>not_home</value>
            </option>
        </constraint>
        <property name="pageName">
            <constraint name="NotBlank">
                <option name="message">init_cms.pagename.blank</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
        </property>
        <property name="url">
            <constraint name="NotBlank">
                <option name="message">init_cms.url.blank</option>
                <option name="groups">
                    <value>not_home</value>
                </option>
            </constraint>
        </property>
    </class>

    <class name="FOS\UserBundle\Model\User">
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">usernameCanonical</option>
            <option name="errorPath">username</option>
            <option name="message">fos_user.username.already_used</option>
            <option name="groups">
                <value>Registration</value>
                <value>Profile</value>
            </option>
        </constraint>

        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">emailCanonical</option>
            <option name="errorPath">email</option>
            <option name="message">fos_user.email.already_used</option>
            <option name="groups">
                <value>Registration</value>
                <value>Profile</value>
            </option>
        </constraint>
        <property name="enabled">
            <constraint name="Length">
                <option name="min">0</option>
                <option name="max">4096</option>
                <option name="minMessage">not used</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
        </property>
    </class>
</constraint-mapping>