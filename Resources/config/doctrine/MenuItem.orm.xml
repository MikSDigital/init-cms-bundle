<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="Networking\InitCmsBundle\Entity\MenuItem" table="cms_menu">

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="onPrePersist" />
        </lifecycle-callbacks>

        <field name="name" type="string" length="255" column="name"/>

        <field name="redirectUrl" type="string" length="255" column="redirect_url" nullable="true"/>

        <field name="internalUrl" type="string" length="255" column="internal_url" nullable="true"/>

        <field name="hidden" type="boolean" column="hidden" nullable="true"/>

        <field name="linkTarget" type="string" length="255" column="link_target" nullable="true"/>

        <field name="linkClass" type="string" length="255" column="link_class" nullable="true"/>

        <field name="linkRel" type="string" length="255" column="link_rel" nullable="true"/>

        <field name="lft" type="integer" column="lft"/>

        <field name="lvl" type="integer" column="lvl"/>

        <field name="rgt" type="integer" column="rgt"/>

        <field name="root" type="integer" column="oot" nullable="true"/>


        <field name="isRoot" type="boolean" column="is_root" />

        <field name="locale" type="string" length="5" column="locale"/>

        <field name="description" type="text" column="description" nullable="true"/>

        <field name="visibility" type="string" length="50" column="visibility"/>

        <one-to-many field="children" target-entity="MenuItem" mapped-by="parent">
            <order-by>
                <order-by-field name="lft" direction="ASC"/>
            </order-by>
        </one-to-many>

        <many-to-one field="parent" target-entity="MenuItem" inversed-by="children">
            <join-column name="parent_id" referenced-column-name="id" />
        </many-to-one>

    </entity>
</doctrine-mapping>