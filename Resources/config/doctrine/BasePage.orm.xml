<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi="http://www.w3.org/2001/XMLSchema-instance"
                  schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <mapped-superclass name="Networking\InitCmsBundle\Entity\BasePage"
                       repository-class="etworking\InitCmsBundle\Entity\PageRepository">

        <field name="createdAt" column="created_at" type="datetime"/>

        <field name="updatedAt" column="updated_at" type="datetime"/>

        <field name="enabled" column="enabled" type="boolean"/>

        <field name="pageName" column="page_name" type="string" length="255"/>

        <field name="metaTitle" column="meta_title" type="string" length="255" nullable="true"/>

        <field name="url" column="url" type="string" length="255" nullable="true"/>

        <field name="path" column="path" type="string" length="255" nullable="true"/>

        <field name="level" column="lvl" type="string" length="255" nullable="true"/>

        <field name="metaKeyword" type="string" length="255" column="meta_keyword" nullable="true"/>

        <field name="metaDescription" type="text" column="meta_description" nullable="true"/>

        <field name="metaDescription" type="text" column="meta_description" nullable="true"/>

        <field name="isHome" type="boolean" column="is_home"/>

        <field name="status" type="string" length="50" column="status"/>

        <field name="visibility" type="string" length="50" column="visibility"/>

        <field name="activeFrom" type="date" column="active_from" nullable="true"/>

        <field name="locale" type="string" length="5" column="locale"/>

        <unique-constraints>
            <unique-constraint columns="path,locale" name="path_idx"/>
        </unique-constraints>


        <one-to-many target-entity="Networking\InitCmsBundle\Entity\LayoutBlock" mapped-by="page" orphan-removal="true">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
            <order-by>
                <order-by-field name="sortOrder" direction="ASC"/>
            </order-by>
        </one-to-many>


        <one-to-many target-entity="Networking\InitCmsBundle\Entity\MenuItem" mapped-by="page" orphan-removal="true"/>

        <one-to-one field="contentRoute" target-entity="Networking\InitCmsBundle\Entity\ContentRoute">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
            <join-column name="content_route_id" referenced-column-name="id"/>
        </one-to-one>

        <one-to-many target-entity="Networking\InitCmsBundle\Entity\PageSnapshot" mapped-by="page">
            <cascade>
                <cascade-remove/>
            </cascade>
            <order-by>
                <order-by-field name="version" direction="DESC"/>
            </order-by>
        </one-to-many>

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="prePersist"/>
            <lifecycle-callback type="preUpdate" method="preUpdate"/>
        </lifecycle-callbacks>

    </mapped-superclass>
</doctrine-mapping>