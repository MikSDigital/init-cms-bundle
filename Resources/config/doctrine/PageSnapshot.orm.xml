<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="Networking\InitCmsBundle\Entity\PageSnapshot" table="page_snapshot"
            repository-class="Networking\InitCmsBundle\Entity\PageSnapshotRepository">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="resourceName" type="string" column="resource_name"/>

        <field name="resourceId" type="integer" column="resource_id"/>

        <field name="versionedData" type="array" column="versioned_data"/>

        <field name="version" type="integer" column="version"/>

        <field name="snapshotDate" type="datetime" column="snapshot_date"/>

        <field name="path" type="string" column="path" nullable="true"/>

        <many-to-one field="contentRoute" target-entity="Networking\InitCmsBundle\Entity\ContentRoute" >
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
            <join-column name="content_route_id" on-delete="CASCADE"/>
        </many-to-one>

    </entity>
</doctrine-mapping>