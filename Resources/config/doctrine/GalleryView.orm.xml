<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="Networking\InitCmsBundle\Entity\GalleryView" table="gallery_view">

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="prePersist"/>
            <lifecycle-callback type="preUpdate" method="preUpdate"/>
        </lifecycle-callbacks>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="galleryType" column="gallery_type" type="string" length="50"/>

        <field name="updatedAt" column="updated_at" type="datetime"/>

        <field name="createdAt" column="created_at" type="datetime"/>

        <many-to-one field="mediaGallery" target-entity="Networking\InitCmsBundle\Entity\Gallery">
            <cascade>
                <cascade-merge/>
            </cascade>
            <join-column name="media_gallery_id" on-delete="CASCADE"/>
        </many-to-one>

    </entity>
</doctrine-mapping>