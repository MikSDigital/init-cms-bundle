<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="Networking\InitCmsBundle\Entity\LayoutBlock" table="layout_block">

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="prePersist"/>
            <lifecycle-callback type="preUpdate" method="preUpdate"/>
        </lifecycle-callbacks>

        <field name="name" type="string" length="255" column="name" nullable="true"/>

        <field name="zone" type="string" length="255" column="zone"/>

        <field name="classType" type="string" length="255" column="class_type"/>

        <field name="objectId" type="integer" column="object_id" nullable="true"/>

        <field name="isActive" type="boolean" column="is_active" />

        <field name="sortOrder" type="integer" column="sort_order" nullable="true"/>

        <field name="createdAt" column="created_at" type="datetime"/>

        <field name="updatedAt" column="updated_at" type="datetime"/>

    </entity>
</doctrine-mapping>