<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

	<route id="networking_init_cms_default" pattern="">
		<default key="_controller">NetworkingInitCmsBundle:Default:index</default>
	</route>

	<route id="networking_init_cms_home" pattern="/">
			<default key="_controller">NetworkingInitCmsBundle:Default:home</default>
		</route>

	<route id="networking_init_cms_admin" pattern="/admin/">
		<default key="_controller">NetworkingInitCmsBundle:Default:admin</default>
	</route>

	<route id="networking_init_change_admin_language" pattern="/change_admin_language/{locale}">
		<default key="_controller">NetworkingInitCmsBundle:Default:changeAdminLanguage</default>
		<requirement key="locale">.+</requirement>
		<requirement key="_method">GET|POST</requirement>
	</route>

	<route id="networking_init_change_language" pattern="/change_language/{locale}">
		<default key="_controller">NetworkingInitCmsBundle:Default:changeLanguage</default>
		<requirement key="locale">.+</requirement>
		<requirement key="_method">GET|POST</requirement>
	</route>

    <route id="networking_init_view_draft" pattern="/view_draft/{path}">
   		<default key="_controller">NetworkingInitCmsBundle:Default:viewDraft</default>
           <requirement key="path">(.*)?</requirement>
   	</route>

	<route id="networking_init_view_draft_no_param" pattern="/view_draft">
		<default key="_controller">NetworkingInitCmsBundle:Default:viewDraft</default>
	</route>

	<route id="networking_init_view_live" pattern="/view_live/{path}">
		<default key="_controller">NetworkingInitCmsBundle:Default:viewLive</default>
		<requirement key="path">(.*)?</requirement>
	</route>

    <route id="networking_init_view_live_no_param" pattern="/view_live">
   		<default key="_controller">NetworkingInitCmsBundle:Default:viewLive</default>
   	</route>

    <route id="networking_init_cms_help" pattern="/admin/help/{adminCode}/{action}">
            <default key="_controller">NetworkingInitCmsBundle:Default:adminHelp</default>
            <requirement key="adminCode">.+</requirement>
        	<requirement key="action">(.*)?</requirement>
    </route>

    <route id="networking_init_cms_help_dashboard" pattern="/admin/help/{adminCode}">
            <default key="_controller">NetworkingInitCmsBundle:Default:adminHelp</default>
            <requirement key="adminCode">.+</requirement>
    </route>

</routes>
