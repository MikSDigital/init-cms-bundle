{% extends base_template %}

{% block sonata_nav %}
{% endblock sonata_nav %}

{% block logo %}
{% endblock logo %}

{% block sidebar_left %}
{% endblock %}

{% block body_attributes %}class="sonata-bc login-page"{% endblock %}

{% block content %}
    <div class="row">
        <div id="login" class="connection modal">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    {{ form_start(form, { 'action': path('networking_init_cms_admin_resetting_reset', {'token': token}) }) }}
                    <div class="modal-body">
                        <p class="login-box-msg">{{ 'resetting.reset.submit'|trans({}, 'FOSUserBundle') }}</p>
                        <div class="form-group">
                            {{ form_widget(form.plainPassword.first, {'attr': {
                                'class': 'form-control',
                                'placeholder': 'form.new_password'|trans({}, 'FOSUserBundle')
                            }}) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.plainPassword.second, {'attr': {
                                'class': 'form-control',
                                'placeholder': 'form.new_password_confirmation'|trans({}, 'FOSUserBundle')
                            }}) }}
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <input type="submit" class="btn btn-primary" id="_submit" name="_submit"
                                       value="{{ 'resetting.reset.submit'|trans({}, 'FOSUserBundle') }}"/>
                            </div>
                        </div>
                    </div>
                    {{ form_end(form) }}
                    </form>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <!-- /.modal -->
    </div>

{% endblock content %}
